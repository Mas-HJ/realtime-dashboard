{
  "name": "realtime-dashboard",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w apps/api",
    "dev:dashboard": "npm run dev -w apps/dashboard",
    "build:api": "npm run build -w apps/api",
    "build:dashboard": "npm run build -w apps/dashboard",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:dashboard\"",
    "test": "npm run test:api && npm run test:dashboard",
    "test:api": "npm test -w apps/api",
    "test:dashboard": "npm test -w apps/dashboard",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.55.0"
  }
}
